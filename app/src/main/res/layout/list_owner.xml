<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:textStyle="bold"
        android:id="@+id/list_owner_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Product Name" />

    <TextView
        android:id="@+id/list_owner_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="20" />

    <TextView
        android:id="@+id/list_owner_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_owner_item_name"
        android:layout_below="@+id/list_owner_item_name"
        android:layout_marginTop="11dp"
        android:textSize="20dp"
        android:text="$2.5" />


</RelativeLayout>